 <div class="banner" style="background-image: linear-gradient(-225deg, rgba(128, 16, 136, 0.55) 0%, rgba(14, 0, 61, 0.6) 50%), url(<%= image_path 'cocktails.jpg'%>);">
  <div class="text-center banner-content">
    <h1>Mr Cocktail Program</h1>
    <p>All your favorite cocktails,<strong> in one place</strong></p>
    <a href="#" class="btn btn-yours">Drink</a>
  </div>
</div>


<div class="text-center padded">
  <h2>My Cocktails</h2>
  <div class="container padded">
    <div class="row">

      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="cocktail">
          <%= link_to(cocktail_path(cocktail)) do %>
          <div> <%= cocktail.name %></div>
          <%= image_tag cocktail.photo.url(:thumb), class: 'img-rounded ' %>
          <% end %>
          <br>
          <div class="card-icon">
            <div class="card-add">
              <%= link_to '', new_cocktail_dose_path(cocktail), class: "fa fa-plus-circle" %>
            </div>
            <div class="card-trash">
          <%= link_to '', cocktail, method: :delete, class: 'fa fa-trash' %>
            </div>
          </div>

        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="jumbotron">
  <div class="row">
    <div class="text-center">
      <div class="col-xs-12 col-sm-offset-4 col-sm-4"><h2 class="text-center">Create</h2>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

